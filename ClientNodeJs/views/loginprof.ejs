<% var title = 'loginprof' %>
<% include head %>

<div class="container" >
    <div class="row centered-form">
            <div class="col-xs-12 col-sm-12 col-md-6 col-sm-offset-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h1 class="panel-title"><strong>Connectez-vous  </strong></h1>
                    </div>
                    <div class="panel-body">
                      <form method="post" action="/loginprof">
                       
                          <div class="form-group">
                          <label for="email">Votre Email</label>
                          <input type="email" class="form-control" id="email" name="email" placeholder="Saisir votre email" required autofocus >
                          </div>
                          <div class="form-group">
                          <label for="pwd">Mot de passe </label>
                          <input type="password" class="form-control" id="password" name="password" placeholder="Saisir votre mot de passe" aria-required="required" title="Le mot de passe doit contenir de 6 à 8 caractères alphanumériques" required>
                           </div>
                           <input type="submit" value="Connexion" class="btn btn-info btn-block">
                      </form>
                      <% if(etat != ""){ %>
                            <p><%= etat %></p>
                        <% } %>
                       <a href="/login"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<% include foot%>