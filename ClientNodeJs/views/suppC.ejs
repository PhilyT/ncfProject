<% var title = 'suppression cours' %>
<% include head %>
<div class="container" >
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-12 col-md-6 col-sm-offset-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title"><strong>Supprimer un cours </strong></h1>
                </div>
                <div class="panel-body">

                    <form method="post" action="/suppC">

                        <div class="form-group">
                            <div class="dropdown">
                                <select class="form-control" id="cours" name="cours" >
                                    <% for(var i = 0; i < cours.length; i++) { %>
                                    <option value="<%= cours[i].id_c%>"> <%= cours[i].libelle %> <%= cours[i].heureDebut %> - <%= cours[i].heureFin %> </option>
                                    <% } %>
                                </select>
                            </div>
                        </div>
                        <input type="submit" value="Supprimer le cours" class="btn btn-warning btn-block">
                        <a href="/gestionC"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>



<% include foot %>