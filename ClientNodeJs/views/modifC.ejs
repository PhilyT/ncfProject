<% var title = 'modification cours' %>
<% include head %>
<div class="container" >
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-12 col-md-6 col-sm-offset-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title"><strong>Modifier un cours </strong></h1>
                </div>
                <div class="panel-body">
                    <form method="post" action="/modifC">

                        <div class="form-group">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    Choisissez le cours à modifier
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                    <% for(var i = 0; i < cours.length; i++) { %>
                                    <li><a href="#"><%= cours[i].libelle %></a></li>
                                    <% } %>
                                </ul>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="libelleC">Libellé du cours </label>
                            <input type="text" class="form-control" id="libelleC" name="libelleC" placeholder="Saisir le libellé du cours" required autofocus >
                        </div>
                        <div class="form-group">
                            <label for="heureDeb">Heure de début  </label>
                            <input type="time" class="form-control" id="HeureDeb" name="heureDeb" placeholder="Saisir l'heure de début" required>
                        </div>
                        <div class="form-group">
                            <label for="heureFin">Heure de fin </label>
                            <input type="time" class="form-control" id="HeureFin" name="heureFin" placeholder="Saisir l'heure de fin" required>
                        </div>
                        <input type="submit" value="Modifier le cours" class="btn btn-warning btn-block">
                        <a href="/gestionC"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>



<% include foot %>