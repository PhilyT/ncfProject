<% var title = 'modification etudiant' %>
<% include head %>
<div class="container" >
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-12 col-md-6 col-sm-offset-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title"><strong>Modifier un étudiant </strong></h1>
                </div>
                <div class="panel-body">
                    <form method="post" action="/modifE">

                        <div class="form-group">
                            <div class="dropdown">
                                <select class="form-control" id="etudiant" name="etudiant" >
                                    <% for(var i = 0; i < eleves.length; i++) { %>
                                    <option value="<%= eleves[i].id%>"> <%= eleves[i].prenom %> <%= eleves[i].nom %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="nomE">Nom de l'étudiant</label>
                            <input type="text" class="form-control" id="nomE" name="nomE" placeholder="Saisir le nom de l'étudiant" required autofocus >
                        </div>
                        <div class="form-group">
                            <label for="prenomE">Prénom de l 'étudiant  </label>
                            <input type="text" class="form-control" id="prenomE" name="prenomE" placeholder="Saisir le prenom de l'étudiant" required>
                        </div>
                        <input type="submit" value="Modifier l'étudiant" class="btn btn-warning btn-block">
                        <a href="/gestionE"><span class="glyphicon glyphicon-arrow-left"></span> Retour</a>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>



<% include foot %>